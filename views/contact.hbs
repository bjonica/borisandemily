<h1 class="cover-heading">{{coverHeading}}</h1>
<p class="lead">Send Emily & Boris an email!</p>
{{#if issue}}
    <div class="alert alert-info">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>{{issue}}</strong>
    </div>
{{/if}}
<form class="form-horizontal" action="/contact" method="post">
    <div class="form-group">
        <label for="senderName" class="control-label col-sm-4">
            Your name
        </label>
        <div class="col-sm-8">
            <input type="text" class="form-control required" name="senderName" id="senderName" placeholder="Your Name">
        </div>
    </div>
    <div class="form-group">
        <label for="senderEmail" class="control-label col-sm-4">
            Your email address
        </label>
        <div class="col-sm-8">
            <input type="email" class="form-control required" name="senderEmail" id="senderEmail" placeholder="your.email@address.com">
        </div>
        <p class="help-block">So that we can reach you.</p>
    </div>
    <div class="form-group">
        <label for="message" class="control-bale col-sm-4">
            Your message
        </label>
        <div class="col-sm-8">
            <textarea class="form-control" id="message" name="message" rows="5" placeholder="Type your message"></textarea>
        </div>
        <p class="help-block">What do you want to tell us?</p>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-success">Send Message</button>
        </div>
    </div>
</form>